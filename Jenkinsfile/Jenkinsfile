pipeline {
    agent any 

    environment {
        RELEASE = "2.0"
    }

    stages {
    
        stage('clone') {
        agent any 
        environment{
            LOG_LEVEL = "INFO"
        }
        
            steps {
                sh '''
                    echo "clone release version ${BUILD_ID}  and log level ${LOG_LEVEL}"
                '''
            }
        }

        stage('Build') {
            steps {
                sh '''
                    echo "building"
                '''
            }
        }
    }
}

